.record {
  width: 670rpx;
  height: 160rpx;
  display: flex;
  background-color: white;
  border-radius: 18rpx;
  flex-direction: column;
  margin: 26rpx auto 0 auto;
  justify-content: center;
  align-items: center;
}
.record .img {
  width: 49rpx;
  height: 49rpx;
  border-radius: 100%;
}
.record .img image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
